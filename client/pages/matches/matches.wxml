<block wx:if="{{data.data.length==0}}">
  <view class="" style="diaplay:flex;flex-direction:row;padding:20px">
    <image class=""  src="../../images/smile.png" style="width:50px; height:50px" ></image>
    <view class="" > 点击右下角图标，可以创建比赛哦！ </view>
    </view>
</block>

<block wx:for="{{data.data}}" wx:key="create_time">
  <navigator url="/pages/score_board/score_board?uuid={{item.uuid}}" hover-class="navigator-hover">
    <view class="match-item">

      <view style="display:block; text-align:center;">
        <view >
          <image class="userinfo-avatar" src="{{item.owner.avatarUrl}}" style="width: 100px; height: 100px"> </image>
        </view>

        <view >
          {{item.owner.nickName}}
        </view>  
      </view>

      <view style="display:flex; flex-direction:column;justify-content:space-around ">
        <view >
          {{item.team1}} vs {{item.team2}}
        </view>

        <view >
          {{item.score1}}:{{item.score2}}
        </view>

        <view >
          {{item.place}}
        </view>
        <view >
          {{item.create_time}}
        </view>
      </view>
    </view>
  </navigator>
</block>

<navigator url="/pages/match/match" hover-class="navigator-hover">
      <image class="add_icon" src="../../images/newmatch.png"></image>
</navigator>

