<template name="block">

  <view style="display: flex; flex-direction: row; flex-wrap: wrap; padding: 2px">
      <block wx:for="{{player.play_items}}">
        <block wx:if="{{item.score == 1}}">
          <button bindtap='onTapPlayItem' data-player='{{player_index}}' data-item='{{index}}' type="primary" style="flex:1;  margin:2px;"> {{item.name}} </button>
        </block>

        <block wx:if="{{item.score == -1}}">
          <button bindtap='onTapPlayItem' data-player='{{player_index}}' data-item='{{index}}' type="warn" style="flex:1;  margin:2px; "> {{item.name}} </button>
        </block>
      </block>
   </view>

    <view style="display: flex; flex-direction: row;">
      <text style="flex:1; text-align: center"> {{player.name}} </text>
    </view>
</template>