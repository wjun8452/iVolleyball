/* pages/score_board/score_board.wxss */
.showborder {
  border: solid 1px;
}

.border_bottom {
  border: solid 2px #336699;
  border-top-style: none;
  border-right-style: none;
  border-bottom-style: solid 2px #336699;
  border-left-style: none;
}

.border_right {
  border: solid 1px #336699;
  border-top-style: none;
  border-right-style: solid 1px #336699;
  border-bottom-style: none;
  border-left-style: none;
}

.border_left {
  border: solid 1px #336699;
  border-top-style: none;
  border-right-style: none;
  border-bottom-style: none;
  border-left-style: solid 1px #336699;
}

.score_history_top {
  padding-left: 2px;
  background-color:black;
  color: white;
  border-radius: 0px 10px 0px 0px;
}

.score_history_bottom {
  padding-left: 2px;
  background-color: black;
  color: white;
  border-radius: 0px 0px 10px 0px;
}

.score_history_hidden {
  padding-left: 2px;
  background-color: white;
  color: white;
}

.score_current_top {
  padding-left: 2px;
  border: 1px solid;
  border-radius: 0px 10px 0px 0px;
}

.score_current_bottom {
  padding-left: 2px;
  border: 1px solid;
  border-radius: 0px 0px 10px 0px;
}