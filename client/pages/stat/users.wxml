<view style="padding: 10px">
 
  <form bindsubmit="onAddPlayer">
    <view style="display:flex; flex-direction: row; padding:10px">
      <view style="flex:1">
        <input name="player" placeholder="输入球队名称" value="{{name}}"> </input>
      </view>
      <view style="flex:1">
        <button type="primary" size="mini" form-type="submit"> 修改</button>
      </view>
    </view>
  </form>

 <button open-type='share'> 邀请好友加入 </button>
 

  <block wx:for="{{all_players}}">
    <view style="display:flex; flex-direction: row; padding:10px">
      <view style="flex:1">
        <text> {{item}} </text>
      </view>

      <view style="flex:1">
        <button type="warn" size="mini" bindtap="onDeletePlayer" data-player_index="{{index}}"> 删除 </button>
      </view>

    </view>
  </block>

</view>