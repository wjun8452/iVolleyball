<template name="block">
  <!-- represents an area the player stands -->
  <view style="display:flex; flex-direction:column">

    <view style="flex:1; display: flex; flex-direction: row; flex-wrap: wrap; padding: 2px">
      <block wx:for="{{play_items}}">
        <block wx:if="{{item.score == 1}}">
          <button bindtap='onTapPlayItem' data-position='{{position}}' data-play_item_index='{{index}}' type="primary" style="flex:1;  margin:2px;"> {{item.name}} </button>
        </block>

        <block wx:if="{{item.score == -1}}">
          <button bindtap='onTapPlayItem' data-position='{{position}}' data-play_item_index='{{index}}' type="warn" style="flex:1;  margin:2px; "> {{item.name}} </button>
        </block>
      </block>
    </view>

    <block wx:if="{{is_serve}}">
      <view style="flex:1; color:red; text-align:center">
        {{players[position]}}-{{pos2}}
      </view>
    </block>

    <block wx:if="{{!is_serve}}">
      <view style="flex:1; text-align:center">
        {{players[position]}}-{{pos2}}
      </view>
    </block>
  </view>
</template>